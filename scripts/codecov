#!/usr/bin/env bash

echo "Swift CodeCov Integration";

# Determine OS
UNAME=`uname`;
if [[ $UNAME == "Darwin" ]];
then
    OS="macos";
else
    echo "ðŸš«  Unsupported OS: $UNAME, skipping...";
    exit 0;
fi
echo "ðŸ–¥  Operating System: $OS";


PROJ_OUTPUT=`swift package generate-xcodeproj --enable-code-coverage`;
PROJ_NAME="${PROJ_OUTPUT/generated: .\//}"
SCHEME_NAME="${PROJ_NAME/.xcodeproj/}"

echo "ðŸš€  Testing: $SCHEME_NAME";

WORKING_DIRECTORY=$(PWD) xcodebuild -project $PROJ_NAME -scheme $SCHEME_NAME -sdk macosx -destination arch=x86_64 -configuration Debug test
bash <(curl -s https://codecov.io/bash)

echo "âœ…  Done";
